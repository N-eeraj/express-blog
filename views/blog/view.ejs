<!DOCTYPE html>
<html lang="en">
<%- include("../partials/layout/head", {
  title: `${blog.title} | Express Blog`,
  pageStyle: "blog/view.css",
}) %>
<body>
  <%- include("../partials/layout/navbar") %>
  <main>
    <header>
      <h2 class="title">
        <%= blog.title %>
      </h2>
      <% if (user._id === blog.author.id) { %>
        <div class="actions">
          <a href="<%= `/blog/${blog.slug}/edit` %>">
          <button class="btn-primary">
              Edit
          </button>
          </a>
         <button class="btn-primary" onclick="confirmDelete()">
           Delete
         </button>
        </div>
      <% } %>
    </header>
    <section class="body">
      <p class="content">
        <%= blog.content %>
      </p>
      <span class="author">
        Author:
        <strong>
          <%= blog.author.name %>
        </strong>
      </span>
      <span class="date">
        <%= blog.createdAt.toLocaleDateString("en-IN") %>
      </span>
    </section>
    <ul class="tags-list">
      <% blog.tags.forEach(tag => { %>
        <li class="tag">
          <span>
            <%= tag %>
          </span>
        </li>
      <% }) %>
    </ul>

    <input type="hidden" id="id" value="<%= blog.id %>">
  </main>
  <%- include("../partials/layout/footer") %>
</body>
<script src="/scripts/blog/delete.js"></script>
</html>
