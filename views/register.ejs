<!DOCTYPE html>
<html lang="en">
<%- include("./partials/layout/head", {
  title: "Register | Express Blog",
  pageStyle: "auth.css",
}) %>
<body>
  <%- include("./partials/layout/navbar") %>
  <main>
    <h2 class="title">
      Register
    </h2>

    <form action="/register" method="post">
      <div>
        <div class="input-container">
          <input name="name" placeholder="Name" required />
        </div>
        <% if (locals.errors?.name) { %>
          <span class="error-message">
            <%= errors.name %>
          </span>
        <% } %>
      </div>

      <div>
        <div class="input-container">
          <input type="email" name="email" placeholder="Email" required />
        </div>
        <% if (locals.errors?.email) { %>
          <span class="error-message">
            <%= errors.email %>
          </span>
        <% } %>
      </div>

      <div>
        <div class="input-container">
          <input type="password" name="password" placeholder="Password" required />
          <button type="button" class="password-toggle-btn" onclick="togglePassword(event)">
            Show
          </button>
        </div>
        <% if (locals.errors?.password) { %>
          <span class="error-message">
            <%= errors.password %>
          </span>
        <% } %>
      </div>

      <% if (locals.errors?.message) { %>
        <span class="error-message">
          <%= errors.message %>
        </span>
      <% } %>

      <button class="btn-primary">
        Register
      </button>
    </form>

    <span>
      Already have an account?
      <a href="/login" class="segue-link">
        Sign In
      </a>
    </span>
  </main>
  <%- include("./partials/layout/footer") %>
</body>
<script src="/scripts/passwordToggle.js"></script>
</html>
